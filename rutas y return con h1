/* RUTA CON ARRAY*/

route::get('/arreglo', function (){
    $arreglo =[
        'ID' => '3',
        'DESCRIPCION' => 'Producto1'
    ];
    return $arreglo;
    
    
    
    
    RUTA CON PARAMETROS VIEW NOMBRE
    
    route::get('/nombre/{nombre}',function($nombre){
    return 'el nombre es: ' .$nombre;
});
    
    
    
    
    
    
    

